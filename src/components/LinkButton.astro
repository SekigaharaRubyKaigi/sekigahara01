---
interface Props {
  href: string;
  text?: string;
  variant?: 'primary' | 'secondary';
  size?: 'medium' | 'large';
  external?: boolean;
  showExternalIcon?: boolean;
}

const {
  href,
  text = "詳しくはこちら",
  variant = 'secondary',
  size = 'medium',
  external = false,
  showExternalIcon = false
} = Astro.props;

const isExternal = external || showExternalIcon;

// サイズに応じたパディングとテキストサイズ
const sizeClass = size === 'large'
  ? "px-10 py-3 text-lg"
  : "px-6 py-2";

// ボタンのスタイルを variant に応じて変更
const buttonClass = variant === 'primary'
  ? `inline-flex items-center gap-1 bg-[#332F2E] text-white ${sizeClass} rounded-md font-bold hover:bg-[#4a4745] transition-all mt-2 no-underline`
  : `inline-flex items-center gap-1 border-2 border-[#332F2E] text-[#332F2E] bg-white/80 ${sizeClass} rounded-md font-bold hover:bg-white hover:opacity-70 transition-all mt-2 no-underline`;
---

<div class="text-center">
  <a
    href={href}
    target={isExternal ? "_blank" : undefined}
    rel={isExternal ? "noopener noreferrer" : undefined}
    class={buttonClass}
  >
    {text}
    {showExternalIcon && (
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
      </svg>
    )}
  </a>
</div>
