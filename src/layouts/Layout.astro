---
// src/layouts/Layout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
  title,
  alignTop = false,
  description = "関ケ原Ruby会議01は、天下分け目の地「関ケ原」で開催される地域Ruby会議です。2026年5月30日（土）開催。",
  ogImage = "/sekigahara01/ogp.png"
} = Astro.props;

const url = Astro.url.href;
const siteName = "関ケ原Ruby会議01";
---
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/sekigahara01/favicon.ico" />
    <link rel="apple-touch-icon" href="/sekigahara01/apple-touch-icon.png" />

    <!-- OGP -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={new URL(ogImage, Astro.site || Astro.url).href} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="ja_JP" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site || Astro.url).href} />
    <meta name="twitter:site" content="@sekigahara01" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    <style is:global>
      /* 共通のproseスタイル */
      .prose a {
        color: #332F2E;
        text-decoration: underline;
      }

      .prose a:hover {
        opacity: 0.7;
      }

      .prose ul {
        margin-top: 1rem;
        margin-bottom: 1rem;
        color: #332F2E;
      }

      .prose li {
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
        color: #332F2E;
      }

      .prose li::marker {
        color: #332F2E;
      }
    </style>
  </head>
 <body class="bg-[#ddbd58] bg-[url('/sekigahara01/bk.svg')] bg-repeat bg-center text-[#332F2E] min-h-screen flex flex-col font-sans bg-[length:160px] md:bg-[length:160px] xl:bg-[length:240px]">
  
  <Header />
  
  <main class={`flex-grow flex ${alignTop ? 'items-start' : 'items-center'} justify-center w-full`}>
    <div class="w-full max-w-screen-xl mx-auto">
      <slot />
    </div>
  </main>

  <Footer />
  
</body>
</html>
