---
// src/layouts/Layout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
 <body class="bg-[#bec145] bg-[url('/sekigahara01/bk.svg')] bg-repeat bg-center text-[#332F2E] min-h-screen flex flex-col font-sans bg-[length:160px] md:bg-[length:160px] xl:bg-[length:240px]">
  
  <Header />
  
  <main class="flex-grow flex items-center justify-center w-full">
    <div class="w-full max-w-screen-xl mx-auto">
      <slot />
    </div>
  </main>

  <Footer />
  
</body>
</html>